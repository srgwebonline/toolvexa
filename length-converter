    <script>
        // Navigation functionality
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!navLinks.contains(e.target) && !mobileMenuBtn.contains(e.target)) {
                navLinks.classList.remove('active');
            }
        });
        
        // SEO pages functionality
        function showSeoPage(page) {
            // Hide all seo sections first
            document.querySelectorAll('.seo-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show the requested section
            let sectionId = '';
            switch(page) {
                case 'privacy':
                    sectionId = 'privacy-policy';
                    break;
                case 'terms':
                    sectionId = 'terms-of-service';
                    break;
                case 'about':
                    sectionId = 'about-tool';
                    break;
            }
            
            document.getElementById(sectionId).classList.add('active');
            
            // Close mobile menu if open
            navLinks.classList.remove('active');
            
            // Scroll to the section
            setTimeout(() => {
                document.getElementById(sectionId).scrollIntoView({ behavior: 'smooth' });
            }, 100);
        }
        
        function hideSeoPage() {
            document.querySelectorAll('.seo-section').forEach(section => {
                section.classList.remove('active');
            });
        }
        
        // Close SEO section when clicking outside
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('seo-section')) {
                hideSeoPage();
            }
        });

        // FAQ functionality
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const item = question.parentElement;
                item.classList.toggle('active');
            });
        });

        // Length Converter Core Functionality
        const fromValue = document.getElementById('fromValue');
        const fromUnit = document.getElementById('fromUnit');
        const toValue = document.getElementById('toValue');
        const toUnit = document.getElementById('toUnit');
        const swapButton = document.getElementById('swapButton');
        const fromBox = document.getElementById('fromBox');
        const toBox = document.getElementById('toBox');
        const fromUnitBadge = document.getElementById('fromUnitBadge');
        const toUnitBadge = document.getElementById('toUnitBadge');
        const fromUnitLabel = document.getElementById('fromUnitLabel');
        const toUnitLabel = document.getElementById('toUnitLabel');
        const quickConversions = document.getElementById('quickConversions');
        const recentConversions = document.getElementById('recentConversions');
        const recentList = document.getElementById('recentList');
        const clearRecentBtn = document.getElementById('clearRecentBtn');

        // Conversion factors to meters (base unit)
        const conversionFactors = {
            // Metric
            'meters': 1,
            'kilometers': 1000,
            'centimeters': 0.01,
            'millimeters': 0.001,
            'micrometers': 0.000001,
            'nanometers': 0.000000001,
            
            // Imperial
            'miles': 1609.344,
            'yards': 0.9144,
            'feet': 0.3048,
            'inches': 0.0254,
            
            // Specialized
            'nautical-miles': 1852,
            'light-years': 9.461e15,
            'astronomical-units': 1.496e11,
            'parsecs': 3.086e16,
            'angstroms': 1e-10,
            'fathoms': 1.8288
        };

        // Unit labels for display
        const unitLabels = {
            'meters': {name: 'Meters', symbol: 'm'},
            'kilometers': {name: 'Kilometers', symbol: 'km'},
            'centimeters': {name: 'Centimeters', symbol: 'cm'},
            'millimeters': {name: 'Millimeters', symbol: 'mm'},
            'micrometers': {name: 'Micrometers', symbol: 'μm'},
            'nanometers': {name: 'Nanometers', symbol: 'nm'},
            'miles': {name: 'Miles', symbol: 'mi'},
            'yards': {name: 'Yards', symbol: 'yd'},
            'feet': {name: 'Feet', symbol: 'ft'},
            'inches': {name: 'Inches', symbol: 'in'},
            'nautical-miles': {name: 'Nautical Miles', symbol: 'nmi'},
            'light-years': {name: 'Light Years', symbol: 'ly'},
            'astronomical-units': {name: 'Astronomical Units', symbol: 'AU'},
            'parsecs': {name: 'Parsecs', symbol: 'pc'},
            'angstroms': {name: 'Angstroms', symbol: 'Å'},
            'fathoms': {name: 'Fathoms', symbol: 'fm'}
        };

        // Common quick conversions
        const quickConversionList = [
            {from: 'meters', to: 'feet', value: 1},
            {from: 'kilometers', to: 'miles', value: 1},
            {from: 'centimeters', to: 'inches', value: 1},
            {from: 'miles', to: 'kilometers', value: 1},
            {from: 'feet', to: 'meters', value: 1},
            {from: 'inches', to: 'centimeters', value: 1},
            {from: 'yards', to: 'meters', value: 1},
            {from: 'nautical-miles', to: 'kilometers', value: 1}
        ];

        // Recent conversions storage
        let recentConversionsList = JSON.parse(localStorage.getItem('lengthConverterRecent')) || [];

        // Initialize the converter
        function initConverter() {
            updateConversion();
            updateQuickConversions();
            updateRecentConversions();
            setupEventListeners();
        }

        // Set up event listeners
        function setupEventListeners() {
            fromValue.addEventListener('input', updateConversion);
            fromUnit.addEventListener('change', updateConversion);
            toUnit.addEventListener('change', updateConversion);
            
            swapButton.addEventListener('click', swapUnits);
            
            fromValue.addEventListener('focus', () => {
                fromBox.classList.add('active');
                toBox.classList.remove('active');
            });
            
            toValue.addEventListener('focus', () => {
                toBox.classList.add('active');
                fromBox.classList.remove('active');
            });
            
            clearRecentBtn.addEventListener('click', clearRecentConversions);
            
            // Auto-select text when focusing on input
            fromValue.addEventListener('focus', function() {
                this.select();
            });
            
            toValue.addEventListener('focus', function() {
                this.select();
            });
        }

        // Update the conversion
        function updateConversion() {
            const from = fromUnit.value;
            const to = toUnit.value;
            const value = parseFloat(fromValue.value) || 0;
            
            // Convert from unit to meters
            const valueInMeters = value * conversionFactors[from];
            
            // Convert from meters to target unit
            const convertedValue = valueInMeters / conversionFactors[to];
            
            // Update the result
            toValue.value = formatNumber(convertedValue);
            
            // Update unit badges and labels
            updateUnitDisplays();
            
            // Save to recent conversions
            if (value !== 0) {
                addToRecentConversions(value, from, convertedValue, to);
            }
        }

        // Swap units
        function swapUnits() {
            const tempUnit = fromUnit.value;
            const tempValue = fromValue.value;
            
            fromUnit.value = toUnit.value;
            toUnit.value = tempUnit;
            
            // Swap the values
            const fromVal = parseFloat(fromValue.value) || 0;
            const toVal = parseFloat(toValue.value) || 0;
            
            fromValue.value = toVal;
            
            // Update conversion
            updateConversion();
            
            // Update active box
            fromBox.classList.add('active');
            toBox.classList.remove('active');
        }

        // Update unit badges and labels
        function updateUnitDisplays() {
            const from = fromUnit.value;
            const to = toUnit.value;
            
            fromUnitBadge.textContent = unitLabels[from].name;
            toUnitBadge.textContent = unitLabels[to].name;
            
            fromUnitLabel.textContent = unitLabels[from].symbol;
            toUnitLabel.textContent = unitLabels[to].symbol;
        }

        // Format number for display
        function formatNumber(num) {
            if (num === 0) return '0';
            
            // Handle very large or very small numbers
            if (Math.abs(num) >= 1e6 || (Math.abs(num) < 1e-6 && num !== 0)) {
                return num.toExponential(6).replace(/e\+?/, ' × 10^');
            }
            
            // Format with appropriate decimal places
            const absNum = Math.abs(num);
            if (absNum >= 1000) {
                return num.toLocaleString('en-US', {maximumFractionDigits: 2});
            } else if (absNum >= 1) {
                return num.toLocaleString('en-US', {maximumFractionDigits: 4});
            } else if (absNum >= 0.001) {
                return num.toLocaleString('en-US', {maximumFractionDigits: 6});
            } else {
                return num.toLocaleString('en-US', {maximumFractionDigits: 8});
            }
        }

        // Update quick conversions
        function updateQuickConversions() {
            quickConversions.innerHTML = '';
            
            quickConversionList.forEach(item => {
                const value = item.value;
                const from = item.from;
                const to = item.to;
                
                // Calculate conversion
                const valueInMeters = value * conversionFactors[from];
                const convertedValue = valueInMeters / conversionFactors[to];
                
                // Create conversion item
                const div = document.createElement('div');
                div.className = 'conversion-item';
                div.innerHTML = `
                    <div class="conversion-from">${value} ${unitLabels[from].symbol}</div>
                    <div class="conversion-to">${formatNumber(convertedValue)} ${unitLabels[to].symbol}</div>
                    <div class="conversion-value">${formatNumber(convertedValue)}</div>
                `;
                
                // Add click event to set this conversion
                div.addEventListener('click', () => {
                    fromUnit.value = from;
                    toUnit.value = to;
                    fromValue.value = value;
                    updateConversion();
                    fromBox.classList.add('active');
                    toBox.classList.remove('active');
                });
                
                quickConversions.appendChild(div);
            });
        }

        // Add to recent conversions
        function addToRecentConversions(value, fromUnit, convertedValue, toUnit) {
            const conversion = {
                id: Date.now(),
                value: value,
                fromUnit: fromUnit,
                convertedValue: convertedValue,
                toUnit: toUnit,
                timestamp: new Date().toLocaleTimeString()
            };
            
            // Add to beginning of array
            recentConversionsList.unshift(conversion);
            
            // Keep only last 10 conversions
            if (recentConversionsList.length > 10) {
                recentConversionsList = recentConversionsList.slice(0, 10);
            }
            
            // Save to localStorage
            localStorage.setItem('lengthConverterRecent', JSON.stringify(recentConversionsList));
            
            // Update display
            updateRecentConversions();
        }

        // Update recent conversions display
        function updateRecentConversions() {
            recentList.innerHTML = '';
            
            if (recentConversionsList.length === 0) {
                recentConversions.classList.remove('show');
                return;
            }
            
            recentConversions.classList.add('show');
            
            recentConversionsList.forEach(conversion => {
                const div = document.createElement('div');
                div.className = 'recent-item';
                div.innerHTML = `
                    <div class="recent-conversion">
                        ${conversion.value} ${unitLabels[conversion.fromUnit].symbol} → ${formatNumber(conversion.convertedValue)} ${unitLabels[conversion.toUnit].symbol}
                    </div>
                    <div class="recent-value">${formatNumber(conversion.convertedValue)}</div>
                `;
                
                // Add click event to reuse this conversion
                div.addEventListener('click', () => {
                    fromUnit.value = conversion.fromUnit;
                    toUnit.value = conversion.toUnit;
                    fromValue.value = conversion.value;
                    updateConversion();
                    fromBox.classList.add('active');
                    toBox.classList.remove('active');
                });
                
                recentList.appendChild(div);
            });
        }

        // Clear recent conversions
        function clearRecentConversions() {
            if (recentConversionsList.length === 0) return;
            
            if (confirm('Clear all recent conversions?')) {
                recentConversionsList = [];
                localStorage.removeItem('lengthConverterRecent');
                recentConversions.classList.remove('show');
            }
        }

        // Initialize the converter when page loads
        document.addEventListener('DOMContentLoaded', initConverter);
    </script>
</body>
</html>
